extends layout

block content
	div(id='general')
		h1(id='alignname') App Name
	div(id='navbar_container')
		div(class='navbar',id='navbar_ideapool')
			a(href='/ideapool') Explore all ideas
		div(class='navbar',id='navbar_stuck')
			a(href='/inspire') Feeling stuck
		div(class='navbar',id='navbar_yourideas')
			p Your ideas
		div(class='navbar',id='navbar_ideapanel')
			p Idea 1
			p Idea 2
			div(id='navbar_yourideas_close')
				p Close
	br
	br
	br
	br
	//- div(id='random')
	//- 	h4 An idea would go here
	//- 	button(id="idea1") Click button to see whole idea
	div(class='ideaPoolWrap')
		each idea in ideas
			div(class='ideaPreview')
				p.title= idea.title
				p.description= idea.description
				div(class='tagWrap')
					each tag in idea.tags
						div(class='tag')
							p.tag= tag